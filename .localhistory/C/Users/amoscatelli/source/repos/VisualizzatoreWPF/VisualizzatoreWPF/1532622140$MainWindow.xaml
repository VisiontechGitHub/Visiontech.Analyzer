<Window x:Class="VisualizzatoreWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualizzatoreWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Username"/>
            <TextBox Name="Username" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Password"/>
            <TextBox Name="Password" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Command="{Binding LoginCommand}" IsEnabled="{Binding CanLogin, Mode=OneWay, NotifyOnTargetUpdated=True}">Load File</Button>
        </StackPanel>
    </Grid>
</Window>
