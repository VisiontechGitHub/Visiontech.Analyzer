<Page x:Class="VisualizzatoreWPF.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisualizzatoreWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Username"/>
            <TextBox Name="Username" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="Password"/>
            <TextBox Name="Password" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Command="{Binding LoginCommand}" IsEnabled="{Binding CanLogin}">Load File</Button>
        </StackPanel>
    </Grid>
</Page>
